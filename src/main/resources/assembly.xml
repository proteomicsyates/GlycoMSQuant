<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>no_examples</id>
    <formats>
        <format>zip</format>
        <format>tar.gz</format>
    </formats>
 	<includeBaseDirectory>false</includeBaseDirectory>
 	<fileSets>

        <fileSet>
            <directory>target</directory>
            <includes>
                <include>*.jar</include>
            </includes>
            <outputDirectory>${assembly.output.folder}</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>target/${lib.dir}</directory>
            <includes>
                <include>*.jar</include>
            </includes>
            <outputDirectory>${assembly.output.folder}/${lib.dir}</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>metadata_templates</directory>
            <includes>
                <include>*.xml</include>
            </includes>
            <outputDirectory>${assembly.output.folder}/user_data/ms_metadata_templates</outputDirectory>
        </fileSet>
        <fileSet>
        	<directory></directory>
            <includes>
                <include>*.bat</include>
            </includes>
            <outputDirectory>${assembly.output.folder}</outputDirectory>
        </fileSet>
        <fileSet>
        	<directory></directory>
            <includes>
                <include>*.sh</include>
            </includes>
            <outputDirectory>${assembly.output.folder}</outputDirectory>
        </fileSet>
        <fileSet>
        	<directory></directory>
            <includes>
                <include>README.txt</include>
            </includes>
            <outputDirectory>${assembly.output.folder}</outputDirectory>
        </fileSet>
        <fileSet>
        	<directory></directory>
            <includes>
                <include>Batch_Import_*.txt</include>
            </includes>
            <outputDirectory>${assembly.output.folder}</outputDirectory>
        </fileSet>
        
    </fileSets>


